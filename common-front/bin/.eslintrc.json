{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react/recommended",
        "google",
        "prettier"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es2021": true
    },
    "globals": {
      "JSX": true
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "require-jsdoc": "off",
        "prettier/prettier": ["error"],
        "no-unused-vars": "off",
        "max-len": [
            1,
            150,
            2,
            {
                "ignorePattern": "^import\\s.+\\sfrom\\s.+;$",
                "ignoreUrls": true,
                "ignoreStrings": true
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": 0
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./internals/webpack/webpack.prod.babel.js"
            }
        },
        "react": {
            "pragma": "React",
            "version": "17.0.2"
        }
    }
}
